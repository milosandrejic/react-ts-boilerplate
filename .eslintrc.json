{
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": [
        "webpack.config.js",
        "node_modules",
        "dist"
    ],
    "extends": [
        "airbnb",
        "airbnb-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "react-hooks",
        "import",
        "babel",
        "@typescript-eslint",
        "jsx-a11y"
    ],
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["warn", "unix"],
        "quotes": ["warn", "double"],
        "semi": ["warn", "always"],
        "@typescript-eslint/object-curly-spacing": "off",
        "react/jsx-curly-spacing": ["warn", {
            "when": "never",
            "children": true,
            "allowMultiline": true,
            "spacing": {"objectLiterals": "never"}
        }],
        "@typescript-eslint/quotes": "off",
        "@typescript-eslint/indent": "off"

    }
}
